package com.orange.OSAC.controller;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpSession;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.stereotype.Controller;
import org.springframework.ui.ModelMap;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.servlet.mvc.support.RedirectAttributes;


@Controller
@RequestMapping(value="/")
public class HomeController
{
	/* Debug */
	private final static Logger logger = LoggerFactory.getLogger(HomeController.class);
	
	/*
	###############################
	#                             #
	#            GET              #
	#                             #
	###############################
	*/
	@RequestMapping(method = RequestMethod.GET)
	public String home(ModelMap model, HttpSession session, HttpServletRequest request, final RedirectAttributes redirectAttributes)
	{
		if (session.getAttribute("userSession") == null)
		{
			logger.debug("User not login -> no UserSession");
			redirectAttributes.addFlashAttribute("ERROR_MESSAGE","Vous devez vous connecter avant de pouvoir utiliser l'application OSAC.");
			return ("redirect:/connexion");
		}
		logger.debug("User in session [{}]", session.getAttribute("userSession").toString());
		return ("home");
	}
	/*
	###############################
	#                             #
	#            GET              #
	#                             #
	###############################
	*/
}
