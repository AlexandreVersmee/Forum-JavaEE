package com.orange.OSAC.controller;

import javax.servlet.http.HttpSession;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.servlet.mvc.support.RedirectAttributes;

@Controller
@RequestMapping(value = "/logout") 
public class LogoutController
{
	/* Debug */
	private final static Logger logger = LoggerFactory.getLogger(LogoutController.class);
		
	/*
	###############################
	#                             #
	#            GET              #
	#                             #
	###############################
	*/
	/*
	###############################
	#                             #
	#            POST             #
	#                             #
	###############################
	*/
    @RequestMapping(method = RequestMethod.POST)
	public String logUser(HttpSession session, final RedirectAttributes redirectAttributes)
	{
    	logger.debug("Delete userSession variable -> go login.jsp");
    	session.removeAttribute("userSession");
    	return ("redirect:/connexion");
	}
}